<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_marginBottom="68dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileRl">

            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="@color/lightblack"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/friendsCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userNameTv"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/lightblack"
                android:alpha="0.8"
                android:textSize="17sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:padding="6dp"
                android:src="@drawable/user_profile_image"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_add"
                android:layout_alignBottom="@id/user_profile_pic"
                android:layout_alignEnd="@id/user_profile_pic"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/profileRl">

            <RelativeLayout
                android:id="@+id/idRl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/idView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cerclebackground"
                    android:backgroundTint="@color/orange"
                    android:padding="4dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_id"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/idView"
                    android:text="Your Id"
                    android:textColor="@color/lightblack"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:alpha="0.8"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/userIdTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/grey"
                    android:layout_marginEnd="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/friendsRl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/friendsView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cerclebackground"
                    android:backgroundTint="@color/pay_green"
                    android:padding="4dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_friends"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/friendsView"
                    android:text="My Friends"
                    android:textColor="@color/lightblack"
                    android:textStyle="bold"
                    android:alpha="0.8"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/grey"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_marginEnd="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addFriendsRl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/addFriendsView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cerclebackground"
                    android:backgroundTint="@color/mainappcolor"
                    android:padding="4dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_add_friends"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/addFriendsView"
                    android:text="Add Friends"
                    android:textColor="@color/lightblack"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/grey"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_marginEnd="12dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:text="Help"/>

            <RelativeLayout
                android:id="@+id/shareRl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/shareView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cerclebackground"
                    android:backgroundTint="@color/yellow"
                    android:padding="4dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_share"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/shareView"
                    android:text="Share App"
                    android:textColor="@color/lightblack"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/grey"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_marginEnd="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rateRl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/rateView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cerclebackground"
                    android:backgroundTint="@color/blue"
                    android:padding="4dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_rate"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rateView"
                    android:text="Rate Us"
                    android:textColor="@color/lightblack"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/grey"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_marginEnd="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logOutRl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/logView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/cerclebackground"
                    android:backgroundTint="@color/redOk"
                    android:padding="4dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_log_out"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/logView"
                    android:text="Log Out"
                    android:textColor="@color/lightblack"
                    android:alpha="0.8"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/grey"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_marginEnd="12dp"/>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>
