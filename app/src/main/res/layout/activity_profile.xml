<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileRl">

            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Praveen Agrawal"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/friendsCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userNameTv"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:text="32 Friends"
                android:textColor="@color/lightblack"
                android:alpha="0.8"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/bioTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/friendsCountTv"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="10dp"
                android:elevation="0dp"
                android:maxLines="6"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:text="Here i will write about myself including hobbies interests family dob and all things that i want to share with everyone"
                android:textColor="@color/lightblack"
                android:textSize="17sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/bioTv"
                android:layout_marginTop="8dp"
                android:alpha="0.4"
                android:background="@color/lightblack" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:padding="6dp"
                android:src="@drawable/user_profile_image"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileRl">

        <TextView
            android:id="@+id/rawgenderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="@color/lightblack"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/genderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@color/lightblack"
            android:textSize="19sp"
            android:alpha="0.7"
            android:textStyle="italic"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/rawcityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="@color/lightblack"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_below="@id/rawgenderTv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/cityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jaipur"
            android:textColor="@color/lightblack"
            android:textSize="19sp"
            android:alpha="0.7"
            android:layout_below="@id/genderTv"
            android:textStyle="italic"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/rawdobTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB"
            android:layout_below="@id/rawcityTv"
            android:textColor="@color/lightblack"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/dobTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/20001"
            android:textColor="@color/lightblack"
            android:textSize="19sp"
            android:layout_below="@id/cityTv"
            android:alpha="0.7"
            android:textStyle="italic"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"/>

    </RelativeLayout>

        <Button
            android:id="@+id/connectBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="5dp"
            android:text="Connect"
            android:layout_alignParentBottom="true"
            android:textSize="24sp"
            android:background="@color/orange"/>

</RelativeLayout>
